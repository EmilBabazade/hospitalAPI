@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Increment Count</button>

<p role="status">Facotiral of @currentFactorial is @factorial</p>

<button class="btn btn-primary" @onclick="MoreFactorial">Increment Factorial</button>

@code {
    private int currentCount = 0;
    private void IncrementCount()
    {
        currentCount++;
    }
}

@code {
    private int currentFactorial = 1;
    private int factorial = 1;
    private void MoreFactorial() {
        currentFactorial++;
        factorial = CalculateFactorial(currentFactorial);
    }

    private int CalculateFactorial(int x) {
        if (x <= 1) {
            return 1;
        }
        return x * CalculateFactorial(x - 1);
    }
}
